<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundarea"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/MainActivity_ImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="50dp"
        android:background="@drawable/textviewarea"
        android:contentDescription="@string/MainActivity_Image_View"
        android:visibility="visible" />

    <TextView
        android:id="@+id/MainActivity_TextView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/textviewarea"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/MainActivity_Capture_Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="155dp"
        android:layout_marginVertical="@dimen/cardview_compat_inset_shadow"
        android:background="@color/cardview_shadow_end_color"
        android:contentDescription="@string/MainActivity_Capture_Button"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/pokeball" />

</LinearLayout>