<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogin"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/Act_Login_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="150dp"
        android:autofillHints="@string/Act_Login_UserEmail_Hint"
        android:ems="10"
        android:hint="@string/Act_Login_UserEmail_Hint"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Act_Login_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="50dp"
        android:autofillHints="@string/Act_Login_Password_Hint"
        android:ems="10"
        android:hint="@string/Act_Login_Password_Hint"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Act_Login_LogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:text="@string/Act_Login_LoginButton_Text"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/Act_Login_RegButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/Act_login_Login_Text"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>